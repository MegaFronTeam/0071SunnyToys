extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sCategories/_sCategories.pug
include ../blocks/sHit/_sHit.pug
include ../blocks/sAbout/_sAbout.pug
include ../blocks/sCerts/_sCerts.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/sProdCard/_sProdCard.pug

block variables
	- let  mainPage= null 
	- let  bg= '02-1912.png'

block title
	- let  title= 'prod-card'
	title= title
block pagecontent
	+mob-mnu()
	+header()
		+top-nav()
	+b.page-head
		.container
			+breadcrumb('Главная', 'Каталог товаров', 'Машинки металические')
			+e.row.row
				.col-auto
					+e.back-arrow(href="#")
						img(loading="lazy" src='img/svg/short-arrow-left.svg' alt='')
				.col
					h1 Машинка разбивающаяся 8шт (1шт)
	+sProdCard()
	+sHit({
		title: 'Похожие товары',
		footer: true,
		fBtnTxt: 'Смотреть все',
	})
	+sHit({
		title: 'Вы смотрели',
	})
	+footer()