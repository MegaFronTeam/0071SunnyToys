extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sCategories/_sCategories.pug
include ../blocks/sHit/_sHit.pug
include ../blocks/sAbout/_sAbout.pug
include ../blocks/sCerts/_sCerts.pug

block variables
	- let  mainPage= null 
	- let  bg= 'index-1912.png'

block title
	- let  title= 'index'
	title= title
block pagecontent
	+mob-mnu()
	+header()
		+top-nav()
	+headerBlock()
	+sCategories()
	+sHit({
		addClasses: 'pt-0',
		title: 'Хиты продаж',
		new: true,
		footer: true,
		num: 1,
	})
	+sHit({
		title: 'Вы смотрели',
		num: 2,
	})
	.container
		.row
			.col-base-6
				+sAbout()
			.col-base-6
				+sCerts()
	+footer()