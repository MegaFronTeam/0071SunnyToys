mixin sProdCard(data)
	// start sProdCard
	+b.sProdCard.section#sProdCard&attributes(attributes)
		.container
			+e.row.row
				.col-lg-6
					+e.slider--js.swiper-container
						.swiper-wrapper
							+e.slide.swiper-slide
								+e.img(data-fancybox="video-gallery" data-src="img/@2x/prod-img.png")
									img(loading="lazy" src='img/@2x/prod-img.png' alt="")
							- for (var x = 0; x < 5; x++)

								+e.slide.swiper-slide
									+e.img(data-fancybox="video-gallery" data-src='https://vk.com/video_ext.php?oid=-63758929&id=456241068&hash=7eaebe1855265c5c&hd=2&autoplay=1' data-type="iframe" data-thumb="img/@2x/prod-img.png" data-width="1280" data-height="720")
										img(loading="lazy" src='img/@2x/prod-img.png' alt="")
					+e.slider--thumbs.--thumbs-js.swiper-container
						+arrow()
						.swiper-wrapper
							+e.slide.swiper-slide
								+e.img()
									img(loading="lazy" src='img/@2x/prod-img.png' alt="")
							- for (var x = 0; x < 5; x++)

								+e.slide.swiper-slide
									+e.img()
										img(loading="lazy" src='img/@2x/prod-img.png' alt="")
										
				.col-lg-6.col-base-5
					+e.chars
						+sProdCardCharItem('Артикул')
							| Г11340
						+sProdCardCharItem('Категория')
							span.text-primary Машинки пластмассовыеs
						+sProdCardCharItem('Производитель')
							span.text-primary BELA (БЕЛА)
						+sProdCardCharItem('Коробка')
							| 8 шт.
						+sProdCardCharItem('Блок')
							| 84 шт.
						+sProdCardCharItem('В наличии')
							| Более коробки
						+sProdCardCharItem('Тема')
							span.text-primary Гарри Поттер
					+priceRow(true, true)
					+e.descr
						p Инерционная. Разбивается после столкновения с препятствиями. После этого, машинку можно без труда собрать в первоначальное состояние. В дисплейбоксе. Цена за 1 шт
	// end sProdCard

mixin sProdCardCharItem(key)
	+e.char-row.row
		+e.key-col.col-sm-auto=key
		+e.val-col.col-sm
			block