mixin sCatalogFilterItem(txt, amount, activeClasses='')
	+e.dd-item.f-dd-item-js(class=activeClasses)
		+e.i-row.row.align-items-center
			.col
				+customChb(txt, 'bold', amount)&attributes(attributes)
					span.txt=txt
			.col-auto
				+e.dd-btn.f-dd-btn-js(class=activeClasses)
		+e.dd-content.f-dd-content-js(class=activeClasses)
			+customChb('Машинки Кинсмарт')
			+customChb('Машинки Маисто')
			+customChb('Машинки Play Smart')
			+customChb('Машинки Пионер')
			+customChb('Машинки разные')(checked)

mixin customChb(txt, addClases, amount)
	+b.LABEL.custom-chb(class=addClases)
		input(type="checkbox" class='invisible' name=txt)&attributes(attributes)
		span.square
		if amount
			span.txt
				span=txt
				sapn.ms-1.text-primary=amount
		else
			span.txt!=txt

mixin customSlect(selectName, optionsArr=['Дата поступления ↑', 'Дата поступления ↓','цена ↑','цена ↓', 'наличие'], keyClass='custom-select-js')
	+b.custom-select
		select(name=selectName class=keyClass)
			- for (let item of optionsArr)
				option(value=item)=item